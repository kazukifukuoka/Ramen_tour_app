<header>
  <nav class='navbar navbar-expand-lg navigation navbar-light bg-light'>
    <div class='container'>
      <%= link_to 'Ramen Tour', root_path, class: 'navbar-brand' %>

      <button class='navbar-toggler' data-toggle='collapse' data-target='#navbarSupportedContent'
        aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
        <span class='navbar-toggler-icon'></span>
      </button>

      <div class='collapse navbar-collapse' id='navbarSupportedContent'>
        <ul class='navbar-nav ml-auto main-nav align-items-center'>
          <li class='nav-item'>
            <%= link_to  new_ramen_store_path, class: 'nav-link' do %>
              <i class='fas fa-store fa-fw'></i>
              <span>店舗登録</span>
            <% end %>
          </li>
          <li class='nav-item'>
            <%= link_to  likes_ramen_stores_path, class: 'nav-link' do %>
              <i class="far fa-thumbs-up fa-fw"></i>
              <span>お気に入り</span>
            <% end %>
          </li>

          <li class='nav-item dropdown dropdown-slide'>
            <a href='#' class='nav-link dropdown-toggle' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'>
              <%= image_tag current_user.image.url, size: '30x30', class: 'rounded-circle' %>
              <span><%= current_user.decorate.full_name %></span>
            </a>

            <div class='dropdown-menu dropdown-menu-right'>
              <%= link_to  user_path(current_user), class: 'nav-link dropdown-item' do %>
                <i class="fas fa-edit fa-fw"></i>
                <span>マイページ</span>
              <% end %>
              <%= link_to  destroy_user_session_path, method: :delete, class: 'nav-link dropdown-item' do %>
                <i class="fas fa-sign-out-alt fa-fw icon"></i>
                <span>ログアウト</span>
              <% end %>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
