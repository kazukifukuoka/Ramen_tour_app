<% content_for(:title, 'マイページ') %>
<div class="container">
  <div class="pt-4">
    <div class="row">
      <div class="col-sm-4">
        <div class="user-border">
          <div class="text-center">
            <%= image_tag @user.image.url(:thumb), class: 'rounded-circle', size: '200x200' %>
            <% if current_user.id == @user.id %>
              <%= link_to "アカウントの情報を変更", edit_user_registration_path, class: "btn btn-primary my-3" %>
            <% end%>
            <p class="font-weight-bold"><%= @user.nickname %></p>
            <hr>
            <p class="font-weight-bold">プロフィール</p>
            <% if @user.profile? %>
              <p class="font-weight-bold"><%= @user.nickname %></p>
            <% else %>
              <p class="text-muted">プロフィールは設定されていません</p>
            <% end %>
            <hr>
            <p>投稿店舗数 <%= current_user.ramen_stores.count %></p>
            <p>レビュー数 <%= current_user.ramen_store_reviews.count %></p>
          </div>
        </div>
      </div>
      <div class="col-sm-8">
        <div class="nowrap_nav">
          <!--タブ名-->
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" data-toggle="tab" href="#tab1" role="tab" aria-controls="home" aria-expanded="true">投稿店舗</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#tab2" role="tab" aria-controls="profile">メニュー</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#tab3" role="tab" aria-controls="profile">写真</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#tab4" role="tab" aria-controls="profile">説明</a>
            </li>
          </ul>
          <!--タブコンテンツ-->
          <div class="tab-content" id="myTabContent">
            <!-- 店舗投稿 -->
            <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="1-tab">
              <div class="row">
                <%= render partial: 'ramen_stores/ramen_store', collection: @post_ramen_store %>
              </div>
              <%= paginate @post_ramen_store %>
            </div>
            <!-- レビュー投稿 -->
            <div class="tab-pane fade" id="tab2" role="tabpanel" aria-labelledby="2-tab">

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

