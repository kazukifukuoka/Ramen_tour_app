<% content_for(:title, 'マイページ') %>
<div class="container-login">
  <h1>マイページ</h1>
  <div class="my-3">
  <% if @user.image? %>
    <%= image_tag @user.image.url(:thumb) %>
  <% else %>
    <%= image_tag "no_image.png", size: "300x300" %>
  <% end %>
  </div>
  <div class="my-3">
    <h2>名前 : <%= @user.nickname %></h2>
  </div>
  <div class="my-5">
    <p>プロフィール : <%= @user.profile %></p>
  </div>
  <%= link_to "アカウントの情報を変更", edit_user_registration_path, class: "btn btn-primary btn-block" %>
</div>