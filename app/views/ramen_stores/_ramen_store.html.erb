<div class="col-sm-12 col-lg-4 mb-3">
  <div id=<%= "ramen_store-id-#{ramen_store.id}" %>>
    <div class="card">
      <%= link_to ramen_store_path(ramen_store) do %>
      <%= image_tag ramen_store.registered_images.first.image.url, class: 'card-img-top thumb' %><% end %>
      <div class="card-body">
      <div class="clearfix mb-2">
        <div class="float-left"><%= rating_for ramen_store, 'name', imdb_avg: true, readonly: true %></div>
        <h4 class="card-title pt-4"><%= link_to ramen_store.name, ramen_store_path(ramen_store) %></h4 >
      </div>
          <p>いいね数：<%= ramen_store.likes.count %></p>
          <p>レビュー数：<%= ramen_store.reviews.count %></p>
          <p>投稿者：<%= ramen_store.user.nickname %></p>
      <ul class="crud-menu-btn list-inline float-right">

      </ul>
        <ul class="list-inline">

          <li class="list-inline-item">
            <i class='far fa-clock fa-fw'></i>
            <%= l ramen_store.created_at, format: :long %>
          </li>
        </ul>
        <p><% ramen_store.tag_list.each do |tag| %>
        <% if @path.is('ramen_stores#index') %>
          <span class="badge badge-primary mr-1 p-2"><%= link_to tag, ramen_stores_path(tag_name: tag), class: "text-white" %></span>
          <% else @path.is('ramen_stores#likes') %>
            <span class="badge badge-primary mr-1 p-2"><%= link_to tag, likes_ramen_stores_path(tag_name: tag), class: "text-white" %></span>
          <% end %>
          <% end %>
        </p>
        <p class="card-text">見出し説明文</p>
      </div>
    </div>
  </div>
</div>


