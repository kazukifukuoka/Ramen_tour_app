<div class="nested-fields pr-4">
  <table class="table">
    <tbody>
      <td><%= f.text_field :name, class: "form-control", required: true, autofocus: true, placeholder: '例：醤油ラーメン' %></td>
      <td><%= f.text_field :price, class: "form-control", required: true, autofocus: true, placeholder: '例：700' %></td>
    </tbody>
    <div class="text-right">
      <%= link_to_remove_association f, class: 'btn btn-danger' %>
    </div>
  </table>
</div>
