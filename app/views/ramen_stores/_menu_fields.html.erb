<div class="nested-fields">
  <div class="form-inline pb-3">
    <div class="form-group col-6">
      <%= f.label :name, "メニュー ※必須" %>
      <%= f.text_field :name, class: "form-control", required: true, autofocus: true %>
    </div>
    <div class="form-group col-6">
      <%= f.label :price, "金額 ※必須" %>
      <%= f.text_field :price, class: "form-control" ,required: true, autofocus: true %>
    </div>
  </div>
  <%= link_to_remove_association f, class: 'btn btn-danger' %>
</div>
