<% if user_signed_in? %>
  <% if current_user.already_like?(ramen_store) %>
    <%= link_to ramen_store_like_path(id: :like, ramen_store_id: ramen_store.id), method: :delete, id: "like-button", remote: true do %>
      <i class="fas fa-star"></i>
    <% end %>
  <% else %>
    <%= link_to ramen_store_likes_path(ramen_store), id: "like-button", method: :post, remote: true do %>
      <i class="far fa-star"></i>
    <% end %>
  <% end %>
<% else %>
  ない
<% end %>

